from collections import deque

# Goal state
GOAL_STATE = ((1, 2, 3),
              (4, 5, 6),
              (7, 8, 0))   # 0 = blank tile


def find_blank(state):
    for i in range(3):
        for j in range(3):
            if state[i][j] == 0:
                return i, j

# Generate neighbors (Up, Down, Left, Right)
def get_neighbors(state):
    neighbors = []
    x, y = find_blank(state)
    moves = [(-1, 0), (1, 0), (0, -1), (0, 1)]  # Up, Down, Left, Right

    for dx, dy in moves:
        nx, ny = x + dx, y + dy
        if 0 <= nx < 3 and 0 <= ny < 3:
            new_state = [list(row) for row in state]
            new_state[x][y], new_state[nx][ny] = new_state[nx][ny], new_state[x][y]
            neighbors.append(tuple(tuple(row) for row in new_state))
    return neighbors

# DFS with depth limit (max_moves = 20)
def dfs(start_state, max_moves=20):
    stack = [(start_state, [start_state])]  # (state, path)
    visited = set()

    while stack:
        state, path = stack.pop()
        moves_so_far = len(path) - 1

        # depth / move limit
        if moves_so_far > max_moves:
            continue

        # Goal test
        if state == GOAL_STATE:
            return path

        if state in visited:
            continue
        visited.add(state)

        # Expand neighbors
        for neighbor in get_neighbors(state):
            if neighbor not in visited:
                stack.append((neighbor, path + [neighbor]))

    return None  # No solution found within depth limit


# Example usage
start_state = ((1, 2, 3),
               (4, 0, 6),
               (7, 5, 8))

solution = dfs(start_state, max_moves=20)

# Print solution (at most 20 steps)
if solution:
    total_moves = len(solution) - 1
    print(" Solution found in", total_moves, "moves (depth-limited to 20 moves):\n")

    # we still only print first 20 moves / 21 states
    max_print_states = min(len(solution), 21)
    for step, state in enumerate(solution[:max_print_states]):
        print("Step", step)
        for row in state:
            print(row)
        print()

    if total_moves > 20:
        print("...stopped printing after 20 moves (total moves =", total_moves, ")")

else:
    print(" No solution found within 20 moves.")
